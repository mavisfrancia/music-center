{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "$app": ["src/app"],
      "$repositories": ["src/repositories"],
      "$routes": ["src/routes"],
      "$services": ["src/services"],
      "$types": ["src/types"]
    }
  },
  "include": ["src/**/*"]
}
