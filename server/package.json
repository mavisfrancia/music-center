{
  "name": "music-center-server",
  "version": "1.0.0",
  "description": "",
  "main": "dist/index.js",
  "scripts": {
    "db:viz": "prisma studio",
    "db:init": "prisma migrate deploy",
    "ci:lint": "eslint ./src",
    "ci:types": "tsc --noEmit",
    "ci:test": "jest --ci --testPathIgnorePatterns=.int.",
    "ci:test:int": "$npm_execpath run test:db:init && jest .int. -i && $npm_execpath run test:db:rm",
    "ci:validate": "npm-run-all ci:lint ci:types ci:test",
    "start:dev": "ts-node-dev --respawn --transpile-only --exit-child src/index.ts",
    "test:db:init": "docker-compose -f docker-compose.test.yml up -d && ./wait-for-test-db.sh && $npm_execpath run db:init",
    "test:db:rm": "docker-compose -f docker-compose.test.yml rm -fs test_db",
    "test:int": "(DATABASE_URL=${TEST_DATABASE_URL} && $npm_execpath run test:db:init && jest .int. -i && $npm_execpath run test:db:rm)",
    "test": "jest --testPathIgnorePatterns=.int."
  },
  "author": "Mavis Francia (https://github.com/mavisfrancia)",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^3.1.1",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "jest": "^27.2.1",
    "joi": "^17.4.2",
    "module-alias": "^2.2.2"
  },
  "devDependencies": {
    "@babel/core": "^7.15.5",
    "@babel/preset-env": "^7.15.6",
    "@babel/preset-typescript": "^7.15.0",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.0.2",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^4.31.2",
    "@typescript-eslint/parser": "^4.31.2",
    "babel-jest": "^27.2.1",
    "eslint": "^7.32.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.3.2",
    "prisma": "^3.1.1",
    "supertest": "^6.1.6",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.4.2"
  },
  "_moduleAliases": {
    "$app": "src/app",
    "$repositories": "src/repositories",
    "$routes": "src/routes",
    "$services": "src/services",
    "$types": "src/types"
  }
}
